<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/friends"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/avatar1" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fundo_preto_esmaecido">

            <include
                android:id="@+id/include"
                layout="@layout/scroll_movies_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="50dp"
                android:gravity="end"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/source_icon2">

                <TextView
                    android:id="@+id/movie_name2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa_light"
                    android:text="Avatar"
                    android:textAlignment="textEnd"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    app:layout_constraintStart_toStartOf="@+id/textView16"
                    app:layout_constraintTop_toBottomOf="@+id/textView16" />

                <TextView
                    android:id="@+id/movie_description2"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/comfortaa_light"
                    android:maxLines="7"
                    android:text="Jake Sully (Sam Worthington) ficou paraplégico após um combate na Terra. Quando seu irmão morre, Jake é selecionado para substituí-lo no programa Avatar e viaja a Pandora, uma lua extraterrestre, onde encontra diversas formas de vida."
                    android:textAlignment="textEnd"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/movie_name"
                    app:layout_constraintTop_toBottomOf="@+id/genre1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/genre3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_button"
                        android:backgroundTint="#000000"
                        android:fontFamily="@font/comfortaa_light"
                        android:paddingStart="5dp"
                        android:paddingTop="1dp"
                        android:paddingEnd="5dp"
                        android:paddingBottom="2dp"
                        android:text="Ficção científica"
                        android:textColor="#FDFDFD"
                        android:textSize="8sp"
                        app:layout_constraintStart_toStartOf="@+id/movie_name"
                        app:layout_constraintTop_toBottomOf="@+id/movie_name" />

                    <TextView
                        android:id="@+id/genre4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/bg_button"
                        android:backgroundTint="#000000"
                        android:fontFamily="@font/comfortaa_light"
                        android:paddingStart="5dp"
                        android:paddingTop="1dp"
                        android:paddingEnd="5dp"
                        android:paddingBottom="2dp"
                        android:text="Aventura"
                        android:textColor="#FDFDFD"
                        android:textSize="8sp"
                        app:layout_constraintStart_toEndOf="@+id/genre1"
                        app:layout_constraintTop_toBottomOf="@+id/movie_name" />

                    <TextView
                        android:id="@+id/genre14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_button"
                        android:backgroundTint="#000000"
                        android:fontFamily="@font/comfortaa_light"
                        android:paddingStart="5dp"
                        android:paddingTop="1dp"
                        android:paddingEnd="5dp"
                        android:paddingBottom="2dp"
                        android:text="Ação"
                        android:textColor="#FDFDFD"
                        android:textSize="8sp"
                        app:layout_constraintStart_toEndOf="@+id/genre1"
                        app:layout_constraintTop_toBottomOf="@+id/movie_name" />

                    <TextView
                        android:id="@+id/genre15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_button"
                        android:backgroundTint="#000000"
                        android:fontFamily="@font/comfortaa_light"
                        android:paddingStart="5dp"
                        android:paddingTop="1dp"
                        android:paddingEnd="5dp"
                        android:paddingBottom="2dp"
                        android:text="Fantasia"
                        android:textColor="#FDFDFD"
                        android:textSize="8sp"
                        app:layout_constraintStart_toEndOf="@+id/genre1"
                        app:layout_constraintTop_toBottomOf="@+id/movie_name" />

                    <TextView
                        android:id="@+id/genre17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_button"
                        android:backgroundTint="#000000"
                        android:fontFamily="@font/comfortaa_light"
                        android:paddingStart="5dp"
                        android:paddingTop="1dp"
                        android:paddingEnd="5dp"
                        android:paddingBottom="2dp"
                        android:text="162 min."
                        android:textColor="#FDFDFD"
                        android:textSize="8sp"
                        app:layout_constraintStart_toEndOf="@+id/genre1"
                        app:layout_constraintTop_toBottomOf="@+id/movie_name" />

                    <TextView
                        android:id="@+id/genre16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_button"
                        android:backgroundTint="#000000"
                        android:fontFamily="@font/comfortaa_light"
                        android:paddingStart="5dp"
                        android:paddingTop="1dp"
                        android:paddingEnd="5dp"
                        android:paddingBottom="2dp"
                        android:text="2009"
                        android:textColor="#FDFDFD"
                        android:textSize="8sp"
                        app:layout_constraintStart_toEndOf="@+id/genre1"
                        app:layout_constraintTop_toBottomOf="@+id/movie_name" />

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/source_icon2"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/hbo" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>