<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#956767" />
            <stroke android:color="#FFDEAD" android:width="2dp" />
            <corners android:radius="0dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#CD0101" />
            <stroke android:color="#FF9800" android:width="3dp" />
            <corners android:radius="0dp" />
        </shape>
    </item>

    <item android:state_focused="false">
        <shape android:shape="rectangle">
            <solid android:color="#007C0101" />
            <stroke android:color="#00FDB851" android:width="2dp" />
            <corners android:radius="0dp" />
        </shape>
    </item>

</selector>