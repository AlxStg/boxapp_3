<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

            <variable
                name="model"
                type="com.example.boxapp3.models.fragments.TvFragmentModel" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <!--ggs-->

        <TextView
            android:id="@+id/textView47"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_epg_data"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/include2"
            layout="@layout/scroll_tv_category"
            android:layout_width="350dp"
            android:layout_height="0dp"
            android:visibility="@{!model.showEpg ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:visibility="gone" />

        <include
            android:id="@+id/include3"
            layout="@layout/scroll_tv_channels"
            android:layout_width="510dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView28"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <include
            android:id="@+id/include4"
            layout="@layout/scroll_tv_egp"
            android:layout_width="630dp"
            android:layout_height="0dp"
            android:visibility="@{model.showEpg ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/include3"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/include25"
            layout="@layout/menu_options_epg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/include3"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView28"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="@color/bg_cinza_60"
            android:visibility="@{ model.showEpg ? View.VISIBLE : View.GONE }"
            app:layout_constraintBottom_toBottomOf="@+id/include3"
            app:layout_constraintStart_toEndOf="@+id/include2"
            app:layout_constraintTop_toTopOf="@+id/include3"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/arrow_channel_list" />

        <ImageView
            android:id="@+id/imageView27"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:background="@color/bg_cinza_60"
            android:visibility="@{ !model.showEpg ? View.VISIBLE : View.GONE }"
            app:layout_constraintBottom_toBottomOf="@+id/include3"
            app:layout_constraintStart_toEndOf="@+id/include3"
            app:layout_constraintTop_toTopOf="@+id/include3"
            app:srcCompat="@drawable/arrow_epg" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>