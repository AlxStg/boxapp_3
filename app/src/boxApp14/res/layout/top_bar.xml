<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.example.boxapp3.models.activities.MainActivityModel" />
        <import type="android.view.View" />
    </data>

    <LinearLayout
        android:id="@+id/include_top_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/rounded_corners_20dp_black"
        android:backgroundTint="#FFFFFF"
        android:gravity="center|end"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        android:paddingTop="5dp"
        android:paddingEnd="15dp"
        android:paddingBottom="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:orientation="horizontal"
            android:padding="3dp">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@drawable/bg_button_focus_red"
                android:focusable="auto"
                android:focusableInTouchMode="true"
                android:onClick="@{(v) -> model.setShowModalMobile(true)}"
                android:padding="5dp"
                app:srcCompat="@drawable/icon_cellphone"
                app:tint="@color/preto_focus_branco" />
        </LinearLayout>

        <TextClock
            android:id="@+id/textClock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/sulphur_point"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:text="22:22" />

        <ImageView
            android:id="@+id/imageView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/bg_button_focus_red"
            android:clickable="true"
            android:focusable="true"
            android:onClick="@{(v) -> model.setShowSearchInput(true)}"
            android:padding="5dp"
            app:srcCompat="@drawable/search"
            app:tint="@color/preto_focus_branco" />

        <EditText
            android:id="@+id/editTextText4"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="@font/sulphur_point"
            android:hint="@string/search_movies_series_or_live_tv"
            android:inputType="textPersonName"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:text="@={model.search}"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#000000"
            android:textColorHint="#636363"
            android:textSize="18sp"
            android:visibility="@{ model.showSearchInput ? View.VISIBLE : View.GONE }" />

    </LinearLayout>

</layout>