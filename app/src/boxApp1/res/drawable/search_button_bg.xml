<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false" android:state_selected="false">
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <stroke android:width="1dp" android:color="#00FFFFFF" />
            <solid android:color="#00979797"/>
        </shape>

    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <stroke android:width="1dp" android:color="#66FFFFFF" />
            <gradient android:angle="45"
                android:centerColor="#59C780FA"
                android:endColor="#59F843A6"
                android:startColor="#590626DF" />
        </shape>


    </item>

    <item android:state_focused="false" android:state_selected="true">

        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <stroke android:width="0dp" android:color="#00FFFFFF" />
            <gradient android:angle="45"
                android:centerColor="#C780FA"
                android:endColor="#F843A6"
                android:startColor="#0626DF" />
        </shape>
    </item>
</selector>