<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="com.example.iptvsdk.data.models.EpgDb" />
        <variable
            name="daysPlayback"
            type="Integer" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_epg_button_app15"
        android:clickable="true"
        android:focusable="true"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingEnd="18dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/textView46"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:duplicateParentState="true"
            android:fontFamily="@font/advent_pro_medium"
            android:textColor="@color/epg_labels"
            android:textSize="16sp"
            android:textStyle="bold"
            app:epgDate="@{model.start}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="10:00h" />

        <TextView
            android:id="@+id/textView44"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:text="@string/playback"
            android:textColor="#BF0000"
            android:textSize="10sp"
            app:dateStart="@{model.start}"
            app:daysPlayback="@{daysPlayback}"
            app:layout_constraintBottom_toTopOf="@+id/textView46"
            app:layout_constraintStart_toStartOf="@+id/textView46"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lbl_watch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:duplicateParentState="true"
            android:fontFamily="@font/advent_pro_medium"
            android:maxLines="2"
            android:text="@{model.title}"
            android:textAlignment="center"
            android:textColor="@color/epg_labels"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView46"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Programa" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>