<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false" android:state_selected="false">
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <stroke android:width="1dp" android:color="#00FFFFFF" />
            <solid android:color="#1AFFFFFF" />
        </shape>

    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <stroke android:width="1dp" android:color="#80FFFFFF" />
            <solid android:color="#33979797"/>
        </shape>

        30
    </item>

    <item android:state_focused="false" android:state_selected="true">

        <shape android:shape="rectangle">
            <corners android:radius="50dp" />
            <stroke android:width="0dp" android:color="#00FFFFFF" />
            <gradient android:angle="45"
                android:centerColor="#99F44336"
                android:endColor="@color/default_background"
                android:startColor="#99000000" />
        </shape>
    </item>
</selector>