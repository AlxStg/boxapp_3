<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="com.example.iptvsdk.data.models.EpgDb" />
        <variable
            name="daysPlayback"
            type="Integer" />
        <import type="android.view.View" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_scroll_epg_item"
        android:backgroundTintMode="screen"
        android:clickable="true"
        android:focusable="true"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingEnd="20dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/textView46"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:textColor="@color/menu_scrol_item_color"
            android:textSize="14sp"
            app:epgDate="@{model.start}"
            app:layout_constraintBottom_toTopOf="@+id/lbl_watch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="10:00h" />

        <TextView
            android:id="@+id/textView47"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textAlignment="viewStart"
            android:textColor="@color/menu_scrol_item_color"
            android:textSize="14sp"
            app:epgDate="@{model.start}"
            app:layout_constraintBottom_toBottomOf="@+id/textView46"
            app:layout_constraintStart_toEndOf="@+id/textView46"
            app:layout_constraintTop_toTopOf="@+id/textView46"
            tools:text="-  10:00h" />

        <TextView
            android:id="@+id/textView44"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/playback"
            android:textColor="@color/default_secondary_color"
            android:textSize="14dp"
            app:dateStart="@{model.start}"
            app:daysPlayback="@{daysPlayback}"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout16"
            app:layout_constraintStart_toStartOf="@+id/linearLayout16"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Gravado" />

        <TextView
            android:id="@+id/lbl_watch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="@{model.title}"
            android:textAlignment="viewStart"
            android:textColor="@color/menu_scrol_item_color"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout16"
            app:layout_constraintStart_toStartOf="@+id/textView46"
            app:layout_constraintTop_toBottomOf="@+id/textView46"
            tools:text="Nome do programa" />

        <LinearLayout
            android:id="@+id/linearLayout16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button"
            android:clickable="true"
            android:duplicateParentState="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:visibility="@{model.endAfterNow() || model.isPlayback(daysPlayback) ? View.VISIBLE : View.INVISIBLE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView44">

            <ImageView
                android:id="@+id/imageView25"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:loadImageDrawable="@{model.isPlayback(daysPlayback) ? @drawable/play_circle : @drawable/add_circle}" />

            <TextView
                android:id="@+id/textView57"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:text="@{model.isPlayback(daysPlayback) ? `Assistir` :!model.hasReminder ? `Lembrete` : `Remover lembrete`}"
                android:textColor="#FFFFFF"
                android:textSize="16dp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>