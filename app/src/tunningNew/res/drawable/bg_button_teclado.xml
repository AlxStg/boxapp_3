<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <stroke android:width="1dp" android:color="#00FFFFFF" />
            <gradient android:angle="0"
                android:endColor="#FB783B"
                android:startColor="#FF5722" />
        </shape>

    </item>
    <item android:state_focused="false">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <solid android:color="#05FFFFFF"/>
            <stroke android:width="1dp" android:color="#08FFFFFF" />
        </shape>


    </item>

    <item android:state_focused="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <gradient android:angle="0"
                android:startColor="#FB783B"
                android:endColor="#FF5722" />
            <stroke android:width="1dp" android:color="#80FFFFFF" />
        </shape>


    </item>

</selector>